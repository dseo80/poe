superLogoutCommand(){
superLogoutCommand:
	logoutCommand()
	return
}

logoutCommand(){
logoutCommand:
	global string, lastlogout
	ltime := lastlogout + 1000
	if ( ltime < A_TickCount ) {
		Run, %string%
		lastlogout := A_TickCount
	}
	return
}


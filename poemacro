inviteCommand:
	BlockInput On
	Send ^{Enter}{Home}{Delete}/invite {Enter}
	BlockInput Off
	return
}

oosCommand(){
oosCommand:
	global oosTimer, baseOosTimer, oosTimerActive
	BlockInput On
	SendInput, {enter}
	Sleep 2
	SendInput, {/}oos
	SendInput, {enter}
	BlockInput Off
	oosTimerActive := true
	return
}

